@model QuoteOfTheDay.Models.Quote
@{
    ViewData["Title"] = "AddQuoteForm";
}

<section class="form">
    <h1 class="bg-dark text-white text-center m-2 p-2">Add Quote </h1>
    <form class="badge-light " asp-action="AddQuoteForm" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            >
            <label asp-for="Author">Author Name:</label>
            <input class="form-control" asp-for="Author" />
        </div>

        <div class="form-group-">
            >
            <label asp-for="Text">Quote:</label>
            <input class="form-control" asp-for="Text" />
        </div>
        
        <div>
            <button class="btn sub btn-outline-danger text-center" type="submit">
                Submit
            </button>
        </div>



    </form>
</section>

